{% extends "layout.njk" %}

{% block content %}
    <div class="card table-container">
        <table width="100%">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                {% for student in students %}
                <tr>
                    <td>{{ student.name }}</td> 
                    <td>{{ student.email }}</td>
                </tr>
                {% endfor %}
            </tbody>
    </table>  
    </div>   
{% endblock content %}
